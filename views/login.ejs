//		E-mail validation ----
function ValidateEmail(email)
{
var mail_format = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
if(email.value.match(mail_format))
{
return true;
}

email.focus();
return false;

}


